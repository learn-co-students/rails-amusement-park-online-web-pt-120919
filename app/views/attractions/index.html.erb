Listing attractions

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Name</td>
      <td>Tickets</td>
      <td>Details</td>
    </tr>
    <% @attractions.each do |attraction| %>
      <td><%= attraction.name %></td>
      <td><%= attraction.tickets %></td>
      <% if !current_user.admin %>
       <td><%= link_to "Go on #{attraction.name}", attraction_path(attraction.id) %></td>
      <% end %>
    <% end %>
  </tbody>
</table>

<% if current_user.admin %>
  <%= link_to 'New Attraction', new_attraction_path%><br>
  <% @attractions.map do |att| %>
    <%= link_to "Show #{att.name}", attraction_path(att) %> - <%= link_to 'Edit Attraction', edit_attraction_path(att) %><br>
  <% end %>
<% end %>