<h1>Park Attractions</h1>

<% @attractions.each do |attr| %>
    <p>Name: <%= attr.name %></p>
    <p>Tickets: <%= attr.tickets %></p>
    <% if current_user.admin %>
        <%= link_to "Show #{attr.name}", attraction_path(attr) %><br>
    <% else %>
        <%= link_to "Go on #{attr.name}", attraction_path(attr) %><br>
    <% end %>
<% end %>
<% if current_user.admin %>
    <%= link_to "New Attraction", new_attraction_path %>
<% end %>
